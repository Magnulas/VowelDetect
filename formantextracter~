#!/bin/bash

rm formant_data
touch formant_data


for d in `ls recordings/trainingdata`
	do
	for f in `ls recordings/trainingdata/$d`
		do
		type=`echo $f | grep -o "[A-Za-z]\+[0-9]\+" | grep -o "[A-Za-z]\+"`
		
		echo -n "$type " >> formant_data 
		praat formanter.praat recordings/trainingdata/$d/$f >> formant_data
		done
	done


rm formant_data_test
touch formant_data_test

for d in `ls recordings/testdata`
	do
	for f in `ls recordings/testdata/$d`
		do
		type=`echo $f | grep -o "[A-Za-z]\+[0-9]\+" | grep -o "[A-Za-z]\+"`
		
		echo -n "$type " >> formant_data_test
		praat formanter.praat recordings/testdata/$d/$f >> formant_data_test
		done
	done
for f in `ls recordings/testdata`
	do
		#echo $f
		type=`echo $f | grep -o "[A-Za-z]\+[0-9]\+" | grep -o "[A-Za-z]\+"`
		
		echo -n "$type " >> formant_data_test
		praat formanter.praat recordings/testdata/$f >> formant_data_test
		
	done
